#!/usr/bin/env bash

if [ -n "${BASH_SOURCE[0]:-}" ]; then
  SCRIPT_PATH="${BASH_SOURCE[0]}"
elif [ -n "${ZSH_VERSION:-}" ]; then
  SCRIPT_PATH="${(%):-%N}"
else
  SCRIPT_PATH="$0"
fi

ROOT="$(cd "$(dirname "$SCRIPT_PATH")" && pwd)"

alias dataclass_to_oinf="python \"$ROOT/openinfer-oinf/dataclass_to_oinf.py\""
alias verify_oinf="python \"$ROOT/openinfer-oinf/verify_oinf.py\""

for script in "$ROOT"/scripts/*; do
  if [ -f "$script" ]; then
    base="$(basename "$script")"
    name="${base%.*}"
    alias "$name"="\"$script\""
  fi
done
